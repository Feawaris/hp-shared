{
  "name": "hp-shared",
  "version": "1.10.2",
  "description": "基础库",
  "license": "MIT",
  "author": "hp",
  "bin": "./bin/index.cjs",
  "scripts": {
    "refresh": "pnpm install && husky && pnpm run build",
    "update": "(pnpx npm-check-updates --format group --deep --upgrade) && (cd docs && npm-check-updates --format group --target newest --upgrade) && pnpm run refresh",
    "clean:ignoredConfigFiles": "pnpx rimraf .markdownlint.json .markdownlint-cli2.cjs .markdownlint-cli2.cjs .markdownlintignore stylelint.config.cjs .stylelintrc.json .stylelintignore eslint.config.cjs .eslintrc.cjs .eslintignore prettier.config.cjs .prettierignore commitlint.config.cjs",
    "lint": "pnpm run lint:ignore ; pnpm run lint:json ; pnpm run lint:md ; pnpm run lint:css ; pnpm run lint:js ; pnpm run lint:prettier ; pnpm run lint:git",
    "lint:fix": "pnpm run lint:ignore ; pnpm run lint:json ; pnpm run lint:md:fix ; pnpm run lint:css:fix ; pnpm run lint:js:fix ; pnpm run lint:prettier:fix ; pnpm run lint:git",
    "lint:ignore": "node config/lint-ignore.cjs",
    "lint:json": "node config/lint-json.cjs",
    "lint:md": "node config/lint-md.cjs && markdownlint-cli2 '**/*.{md,markdown}'",
    "lint:md:fix": "node config/lint-md.cjs && markdownlint-cli2 '**/*.{md,markdown}' --fix",
    "lint:css": "node config/lint-css.cjs && stylelint '**/*.{css,vue}'",
    "lint:css:fix": "node config/lint-css.cjs && stylelint '**/*.{css,vue}' --fix",
    "lint:js": "node config/lint-js.cjs && eslint",
    "lint:js:fix": "node config/lint-js.cjs && eslint --fix",
    "lint:prettier": "node config/lint-prettier.cjs && prettier --check .",
    "lint:prettier:fix": "node config/lint-prettier.cjs && prettier --check . --write",
    "lint:git": "node config/lint-git.cjs && echo 'test: commitlint' | commitlint",
    "build": "pnpx rimraf dist/* && rollup --config --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs",
    "build:watch": "pnpm run build --watch",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build:local": "pnpm -C docs run build:local",
    "docs:build:github": "pnpm -C docs run build:github",
    "docs:build:npm": "pnpm -C docs run build:npm",
    "docs:preview": "pnpm -C docs run preview",
    "prepublishOnly": "echo '\\x1b[34mprepublishOnly\\x1b[39m'; pnpm run refresh && pnpm run docs:build:npm",
    "publish:js": "npm publish",
    "publish:python": "pnpm -C python run pypi"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.0.7",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "serialize-javascript": "^6.0.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/wechat-miniprogram": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "cross-env": "^7.0.3",
    "eslint": "9.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "markdownlint-cli2": "^0.13.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.4.1",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "stylelint": "^16.6.1",
    "ts-node": "^10.9.2",
    "typescript": "5.5.2",
    "typescript-eslint": "7.14.1",
    "vue-eslint-parser": "^9.4.3"
  },
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/browser/index.js",
        "script": "./dist/browser/index.umd.js"
      },
      "node": {
        "import": "./dist/node/index.mjs",
        "require": "./dist/node/index.js"
      }
    },
    "./base": {
      "browser": {
        "import": "./dist/browser/base.js"
      },
      "node": {
        "import": "./dist/node/base.mjs",
        "require": "./dist/node/base.js"
      }
    },
    "./base-target-es2015": {
      "browser": {
        "import": "./dist/browser/base-target-es2015.js"
      }
    },
    "./dev": {
      "browser": {
        "import": "./dist/browser/dev.js"
      },
      "node": {
        "import": "./dist/node/dev.mjs",
        "require": "./dist/node/dev.js"
      }
    },
    "./performance": {
      "browser": {
        "import": "./dist/browser/performance.js"
      },
      "node": {
        "import": "./dist/node/performance.mjs",
        "require": "./dist/node/performance.js"
      }
    },
    "./storage": {
      "browser": {
        "import": "./dist/browser/storage.js"
      },
      "node": {
        "import": "./dist/node/storage.mjs",
        "require": "./dist/node/storage.js"
      }
    },
    "./*": "./*"
  },
  "miniprogram": "./dist/wx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Feawaris/hp-shared.git"
  },
  "homepage": "https://github.com/Feawaris/hp-shared",
  "unpkg": "./dist/browser/index.umd.js",
  "jsdelivr": "./dist/browser/index.umd.js"
}
