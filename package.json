{
  "name": "hp-shared",
  "version": "1.3.1",
  "scripts": {
    "refresh": "pnpm install && husky && pnpm run build",
    "lint": "pnpm run lint:markdownlint && pnpm run lint:stylelint && pnpm run lint:eslint && pnpm run lint:prettier",
    "lint:markdownlint": "markdownlint-cli2 README.md --fix",
    "lint:stylelint": "stylelint **/*.{css,vue} --allow-empty-input --fix",
    "lint:eslint": "eslint --config eslint.config.cjs --fix",
    "lint:prettier": "prettier --check --write .",
    "build": "rollup --config --bundleConfigAsCjs",
    "build:watch": "pnpm run build --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "eslint": "9.0.0-beta.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "markdownlint-cli2": "^0.12.1",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "rollup": "^4.13.0",
    "stylelint": "^16.3.1"
  },
  "exports": {
    ".": {
      "browser": "./src/index-browser.js",
      "node": "./dist/node/index.js"
    },
    "./base": {
      "browser": "./src/base/index.js",
      "node": "./dist/node/base.js"
    },
    "./dev": {
      "browser": "./src/dev/index.js",
      "node": "./dist/node/dev.js"
    },
    "./storage": {
      "browser": "./src/storage/index-browser.js",
      "node": "./dist/node/storage.js"
    },
    "./*": "./*"
  },
  "unpkg": "./dist/browser/index.umd.js",
  "jsdelivr": "./dist/browser/index.umd.js",
  "license": "MIT"
}
