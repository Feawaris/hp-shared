{
  "name": "hp-shared",
  "version": "0.0.0",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/browser/index.js",
        "default": "./dist/browser/index.umd.js"
      },
      "node": "./dist/node/index.js"
    },
    "./base": {
      "browser": "./dist/browser/base.js",
      "node": "./dist/node/base.js"
    },
    "./network": {
      "browser": "./dist/browser/network.js",
      "node": "./dist/node/network.js"
    },
    "./storage": {
      "browser": "./dist/browser/storage.js",
      "node": "./dist/node/storage.js"
    },
    "./dev": {
      "browser": "./dist/browser/dev.js",
      "node": "./dist/node/dev.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:watch": "pnpm run build -w",
    "build-all": "pnpm run clean:dist && pnpm run build && pnpm run -C __tests__/shared build && pnpm run -C __tests__/vue3 build",
    "build-all:watch": "pnpm run build:watch & pnpm run -C __tests__/shared build:watch & pnpm run -C __tests__/vue3 build:watch",
    "clean:dist": "npx rimraf dist __tests__/*/dist",
    "clean:node_modules": "npx rimraf **/node_modules",
    "ncu": "npx ncu --pre 0 --deep",
    "ncu:update": "pnpm run ncu -u && pnpm i"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "idb-keyval": "^6.2.0",
    "js-cookie": "^3.0.1",
    "node-clipboardy": "^1.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "eslint": "^8.29.0",
    "eslint-plugin-vue": "^9.8.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.2",
    "rollup": "^3.6.0"
  },
  "license": "MIT"
}
