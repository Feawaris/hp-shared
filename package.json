{
  "name": "hp-shared",
  "version": "1.4.5",
  "scripts": {
    "refresh": "pnpm install && husky && pnpm run build",
    "update": "npx ncu --target newest --deep --upgrade && pnpm run refresh",
    "fix": "pnpm run fix:ignore && pnpm run fix:md && pnpm run fix:css && pnpm run fix:js && pnpm run fix:prettier && pnpm run fix:git",
    "fix:ignore": "node config/lint-ignore.cjs || true",
    "fix:md": "node config/lint-md.cjs && markdownlint-cli2 '**/*.{md,markdown}' --fix || true",
    "fix:css": "node config/lint-css.cjs && stylelint '**/*.{css,vue}' --fix || true",
    "fix:js": "node config/lint-js.cjs && eslint --fix || true",
    "fix:prettier": "node config/lint-prettier.cjs && prettier --check . --write || true",
    "fix:git": "node config/lint-git.cjs && echo 'feat: test' | commitlint || true",
    "build": "rollup --config --bundleConfigAsCjs",
    "build:watch": "pnpm run build --watch",
    "docs:dev": "cross-env vuepress dev docs --clean-cache",
    "docs:build:local": "cross-env vuepress_to=local vuepress build docs",
    "docs:build:github": "cross-env vuepress_to=github vuepress build docs",
    "docs:build:npm": "cross-env vuepress_to=npm vuepress build docs",
    "docs:preview": "npx serve dist/docs",
    "clean:ignoredConfigFiles": "npx rimraf .markdownlint.json .markdownlint-cli2.cjs .markdownlint-cli2.cjs .markdownlintignore stylelint.config.cjs .stylelintrc.json .stylelintignore eslint.config.cjs .eslintrc.cjs .eslintignore prettier.config.cjs .prettierignore commitlint.config.cjs",
    "prepublishOnly": "pnpm run refresh && pnpm run docs:build:npm"
  },
  "dependencies": {
    "serialize-javascript": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@typescript-eslint/eslint-plugin": "^7.5.1-alpha.0",
    "@typescript-eslint/parser": "^7.5.1-alpha.0",
    "@vue/repl": "^4.1.1",
    "@vuepress/bundler-vite": "2.0.0-rc.9",
    "@vuepress/plugin-docsearch": "2.0.0-rc.21",
    "chart.js": "^4.4.2",
    "cross-env": "^7.0.3",
    "echarts": "^5.5.0",
    "eslint": "9.0.0-rc.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.0",
    "flowchart.ts": "^3.0.0",
    "husky": "^9.0.11",
    "katex": "^0.16.10",
    "kotlin-playground": "^1.30.0",
    "markdownlint-cli2": "^0.12.1",
    "markmap-lib": "^0.16.1",
    "markmap-toolbar": "^0.16.0",
    "markmap-view": "^0.16.0",
    "mermaid": "^11.0.0-alpha.7",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "reveal.js": "^5.0.5",
    "rollup": "^4.13.2",
    "sandpack-vue3": "^3.1.11",
    "stylelint": "^16.3.1",
    "typescript": "^5.5.0-dev.20240402",
    "typescript-eslint": "^7.5.1-alpha.0",
    "vidstack": "^1.11.6",
    "vue": "^3.4.21",
    "vue-eslint-parser": "^9.4.2",
    "vuepress": "2.0.0-rc.9",
    "vuepress-theme-hope": "2.0.0-rc.33"
  },
  "exports": {
    ".": {
      "browser": "./src/index-browser.js",
      "node": "./dist/node/index.js"
    },
    "./base": {
      "browser": "./src/base/index.js",
      "node": "./dist/node/base.js"
    },
    "./dev": {
      "browser": "./src/dev/index.js",
      "node": "./dist/node/dev.js"
    },
    "./storage": {
      "browser": "./src/storage/index-browser.js",
      "node": "./dist/node/storage.js"
    },
    "./*": "./*"
  },
  "unpkg": "./dist/browser/index.umd.js",
  "jsdelivr": "./dist/browser/index.umd.js",
  "license": "MIT"
}
