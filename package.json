{
  "name": "hp-shared",
  "version": "0.1.0",
  "scripts": {
    "refresh": "pnpm i && husky install && pnpm run build",
    "dev": "npm-run-all -p dev/*",
    "dev/__tests__/deno": "pnpm run -C __tests__/deno dev",
    "dev/__tests__/koa": "pnpm run -C __tests__/koa dev",
    "dev/__tests__/node": "pnpm run -C __tests__/node dev",
    "dev/__tests__/vue3": "pnpm run -C __tests__/vue3 dev",
    "build": "npm-run-all -s clean:dist -p build/*",
    "build/root": "rollup -c --bundleConfigAsCjs",
    "build/__tests__/shared": "pnpm run -C __tests__/shared build",
    "build/__tests__/vue3": "pnpm run -C __tests__/vue3 build",
    "build:watch": "npm-run-all -s clean:dist -p build:watch/*",
    "build:watch/root": "pnpm run build/root -w",
    "build:watch/__tests__/shared": "pnpm run -C __tests__/shared build:watch",
    "build:watch/__tests__/vue3": "pnpm run -C __tests__/vue3 build:watch",
    "clean:dist": "npx rimraf dist/* __tests__/*/dist/*",
    "clean:node_modules": "npx rimraf **/node_modules",
    "ncu": "npx ncu --pre 0 --deep",
    "ncu:update": "pnpm run ncu -u && pnpm i"
  },
  "dependencies": {
    "axios": "^1.2.3",
    "husky": "^8.0.3",
    "idb-keyval": "^6.2.0",
    "js-cookie": "^3.0.1",
    "node-clipboardy": "^1.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "eslint": "^8.32.0",
    "eslint-plugin-vue": "^9.9.0",
    "fast-glob": "^3.2.12",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.10.0"
  },
  "exports": {
    ".": {
      "browser": "./src/index.js",
      "node": "./dist/node/index.js"
    },
    "./base": {
      "browser": "./src/base/index.js",
      "node": "./dist/node/base.js"
    },
    "./dev": {
      "browser": "./src/dev/index.js",
      "node": "./dist/node/dev.js"
    },
    "./network": {
      "browser": "./src/network/index.js",
      "node": "./dist/node/network.js"
    },
    "./storage": {
      "browser": "./src/storage/index.js",
      "node": "./dist/node/storage.js"
    },
    "./*": "./*"
  },
  "unpkg": "./dist/browser/index.umd.js",
  "jsdelivr": "./dist/browser/index.umd.js",
  "license": "MIT"
}
