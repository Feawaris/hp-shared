{
  "name": "hp-shared",
  "version": "1.3.1",
  "scripts": {
    "refresh": "pnpm install && husky && pnpm run build",
    "update": "npx ncu --target newest --deep --upgrade && pnpm run refresh",
    "fix": "pnpm run fix:md && pnpm run fix:css && pnpm run fix:js && pnpm run fix:prettier",
    "fix:md": "node config/lint-md.cjs --create && markdownlint '**/*.md' --fix || true",
    "fix:css": "node config/lint-css.cjs --create && stylelint 'src/**/*.{css,vue}' --fix || true",
    "fix:js": "node config/lint-js.cjs --create && eslint --fix || true",
    "fix:prettier": "node config/lint-prettier.cjs --create && prettier --check --write '**/*.*' || true",
    "build": "rollup --config --bundleConfigAsCjs",
    "build:watch": "pnpm run build --watch",
    "docs:dev": "vuepress dev docs --clean-cache",
    "docs:build": "vuepress build docs",
    "docs:preview": "npx serve dist/docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@vue/repl": "^4.1.1",
    "@vuepress/bundler-vite": "2.0.0-rc.9",
    "@vuepress/plugin-docsearch": "2.0.0-rc.21",
    "chart.js": "^4.4.2",
    "commander": "^12.0.0",
    "echarts": "^5.5.0",
    "eslint": "9.0.0-rc.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.0",
    "flowchart.ts": "^3.0.0",
    "husky": "^9.0.11",
    "katex": "^0.16.10",
    "kotlin-playground": "^1.30.0",
    "markdownlint-cli": "^0.39.0",
    "markmap-lib": "^0.16.1",
    "markmap-toolbar": "^0.16.0",
    "markmap-view": "^0.16.0",
    "mermaid": "^11.0.0-alpha.7",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "reveal.js": "^5.0.5",
    "rollup": "^4.13.2",
    "sandpack-vue3": "^3.1.11",
    "stylelint": "^16.3.1",
    "vidstack": "^1.10.9",
    "vue": "^3.4.21",
    "vuepress": "2.0.0-rc.9",
    "vuepress-theme-hope": "2.0.0-rc.32"
  },
  "exports": {
    ".": {
      "browser": "./src/index-browser.js",
      "node": "./dist/node/index.js"
    },
    "./base": {
      "browser": "./src/base/index.js",
      "node": "./dist/node/base.js"
    },
    "./dev": {
      "browser": "./src/dev/index.js",
      "node": "./dist/node/dev.js"
    },
    "./storage": {
      "browser": "./src/storage/index-browser.js",
      "node": "./dist/node/storage.js"
    },
    "./*": "./*"
  },
  "unpkg": "./dist/browser/index.umd.js",
  "jsdelivr": "./dist/browser/index.umd.js",
  "license": "MIT"
}
